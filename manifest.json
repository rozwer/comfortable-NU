{
  "name": "Comfortable NU",
  "description": "__MSG_EXTENSION_DESCRIPTION__",
  "version": "2.0.0",
  "manifest_version": 3,
  "default_locale": "en",
  "icons": {
    "16": "img/icon16.png",
    "48": "img/icon48.png",
    "128": "img/icon128.png"
  },
  "action": {
    "default_title": "Comfortable NU",
    "default_popup": "subsakai.html"
  },
  "content_scripts": [
    {
      "js": [
        "content_script.js"
      ],
      "css": [
        "css/comfortable-sakai.css",
        "css/tact-extension.css",
        "css/date-picker.css",
        "css/calendar-sync.css"
      ],
      "matches": [
        "https://tact.ac.thers.ac.jp/*"
      ]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "storage",
    "identity",
    "alarms",
    "notifications"
  ],
  "oauth2": {
    "client_id": "320934121909-3mo570972bcc19chatsu8pcp6bevj7fm.apps.googleusercontent.com",
    "scopes": [
      "https://www.googleapis.com/auth/calendar.events",
      "https://www.googleapis.com/auth/userinfo.email",
      "https://www.googleapis.com/auth/userinfo.profile"
    ]
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; connect-src 'self' https://www.googleapis.com https://oauth2.googleapis.com https://openidconnect.googleapis.com https://accounts.google.com https://securetoken.googleapis.com https://identitytoolkit.googleapis.com https://asia-northeast1-comfortablenu.cloudfunctions.net https://asia-northeast1-engaged-upgrade-460911-c4.cloudfunctions.net; frame-src 'none';"
  },
  "host_permissions": [
    "https://tact.ac.thers.ac.jp/*",
    "https://www.googleapis.com/*",
    "https://oauth2.googleapis.com/*",
    "https://openidconnect.googleapis.com/*",
    "https://asia-northeast1-comfortablenu.cloudfunctions.net/*",
    "https://asia-northeast1-engaged-upgrade-460911-c4.cloudfunctions.net/*"
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "css/comfortable-sakai.css",
        "css/tact-extension.css",
        "css/date-picker.css",
        "css/calendar-sync.css",
        "css/memo-styles.css",
        "css/folder-styles-new.css",
        "css/folder-styles-old.css",
        "css/folder-styles.css",
        "img/logo.png",
        "img/noAssignment.png",
        "img/miniSakaiBtn.png",
        "img/closeBtn.svg",
        "img/scheduleBtn.svg",
        "img/favoriteBtn.svg",
        "img/returnBtn.svg"
      ],
      "matches": [
        "http://*/*",
        "https://*/*"
      ]
    }
  ]
}
