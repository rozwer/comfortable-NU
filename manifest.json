{
  "name": "Comfortable Ishii",
  "description": "__MSG_EXTENSION_DESCRIPTION__",
  "version": "----",
  "manifest_version": 3,
  "default_locale": "en",
  "icons": {
    "16": "img/icon16.png",
    "48": "img/icon48.png",
    "128": "img/icon128.png"
  },
  "action": {
    "default_title": "Comfortable Sakai",
    "default_popup": "subsakai.html"
  },
  "content_scripts": [
    {
      "js": [
        "content_script.js"
      ],
      "css": [
        "css/comfortable-sakai.css",
        "css/tact-extension.css",
        "css/date-picker.css"
      ],
      "matches": [
        "http://*/*",
        "https://*/*"
      ]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "storage"
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "css/comfortable-sakai.css",
        "css/tact-extension.css",
        "css/date-picker.css",
        "img/logo.png",
        "img/noAssignment.png",
        "img/miniSakaiBtn.png",
        "img/closeBtn.svg",
        "img/scheduleBtn.svg",
        "img/favoriteBtn.svg"
      ],
      "matches": [
        "http://*/*",
        "https://*/*"
      ]
    }
  ]
}